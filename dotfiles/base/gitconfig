[diff]
  tool = vimdiff

[merge]
  tool = vimdiff

[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[difftool]
  prompt = false

[mergetool]
  prompt = true

[color]
  diff   = auto
  branch = auto
  status = auto

[alias]
  ; br      = branch
  ; ci      = commit -v
  ; co      = checkout
  df      = diff
  dt      = difftool -y
  l       = log --name-only
  ll      = log -p
  mt      = mergetool -y
  ; pl      = pull --rebase
  ; ps      = push
  ; st      = status
  unci    = reset --soft HEAD^
  unshallow = !git fetch --unshallow && git config remote.origin.fetch "+refs/heads/*:refs/remotes/origin/*" && git fetch origin && :
  unstage = reset HEAD
  ; unpull  = reset --hard HEAD^

[push]
  default = simple

[core]
  excludesfile = ~/.gitignore

[http]
  sslVerify = false
