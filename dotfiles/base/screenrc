sessionname default
autodetach on
startup_message off
shell "zsh"
term screen-256color
defflow off # turn off stupid flow-control (also see: stty -ixon in ~/.zshrc)
shelltitle ''

maptimeout 0
bind h hardstatus ignore
bind g hardstatus alwayslastline
zombie kr
bind A escape ^Aa
bind S escape ^Ss
bind Z escape ^Zz
escape ^Ss
setenv SCREEN 1

bind c screen 1
bind ^c screen 1
bind 0 select 10

bind h prev
bind l next

hardstatus alwayslastline
hardstatus string "%{gk}[%{g}%H%{g}][%{wk}%-w%{=b kR}|%{=d}%{W}%n%f%{=b kR}|%{= kw}%+w%{G}]%-20=%{= bw}[ %Y-%m-%d %c ]"

screen -t '' 01
screen -t '' 02
screen -t '' 03
screen -t '' 04
screen -t '' 05
screen -t '' 06
screen -t '' 07
screen -t '' 08
screen -t '' 09
screen -t '' 10

select 01
